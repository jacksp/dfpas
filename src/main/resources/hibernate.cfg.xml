    <mapping class="com.dfp.persistencia.entities.Vuelo"/> 
   <mapping class="com.dfp.persistencia.entities.Estado"/>
    <mapping class="com.dfp.persistencia.entities.Pasajero"/> 
</session-factory>
</hibernate-configuration>